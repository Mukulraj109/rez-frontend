# =============================================
# REZ FRONTEND - PRODUCTION ENVIRONMENT
# =============================================
# Copy this file to .env.production and fill in your production values
# NEVER commit .env.production to version control!

# =============================================
# APP SETTINGS
# =============================================
EXPO_PUBLIC_APP_NAME=REZ
EXPO_PUBLIC_ENVIRONMENT=production

# =============================================
# API CONFIGURATION (Required)
# =============================================
EXPO_PUBLIC_API_URL=https://api.yourrezapp.com/api
EXPO_PUBLIC_SOCKET_URL=wss://api.yourrezapp.com
EXPO_PUBLIC_API_TIMEOUT=30000

# =============================================
# PAYMENT GATEWAYS (Required)
# =============================================
# Stripe - https://dashboard.stripe.com (use PUBLISHABLE key only!)
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_XXXXXXXXXXXXXXXXXXXX

# Razorpay - https://dashboard.razorpay.com
EXPO_PUBLIC_RAZORPAY_KEY_ID=rzp_live_XXXXXXXXXXXX

# =============================================
# FIREBASE (For Push Notifications & Analytics)
# =============================================
# Get from Firebase Console: https://console.firebase.google.com
EXPO_PUBLIC_FIREBASE_API_KEY=XXXXXXXXXXXXXXXXXXXX
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-app
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-app.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=XXXXXXXXXXXX
EXPO_PUBLIC_FIREBASE_APP_ID=1:XXXXXXXXXXXX:web:XXXXXXXXXXXX

# =============================================
# GOOGLE SERVICES
# =============================================
# Google Maps - https://console.cloud.google.com
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=XXXXXXXXXXXXXXXXXXXX

# Google OAuth (if using social login)
EXPO_PUBLIC_GOOGLE_CLIENT_ID=XXXXXXXXXXXX.apps.googleusercontent.com

# =============================================
# CLOUD STORAGE
# =============================================
# Cloudinary - https://cloudinary.com
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
EXPO_PUBLIC_CLOUDINARY_UPLOAD_PRESET=rez-uploads
EXPO_PUBLIC_CLOUDINARY_UGC_PRESET=rez-ugc
EXPO_PUBLIC_CLOUDINARY_PROFILE_PRESET=rez-profiles
EXPO_PUBLIC_CLOUDINARY_REVIEW_PRESET=rez-reviews

# =============================================
# ANALYTICS & MONITORING (Recommended)
# =============================================
# Sentry - https://sentry.io
EXPO_PUBLIC_SENTRY_DSN=https://xxxx@sentry.io/xxxx

# Google Analytics
EXPO_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXXXX

# Mixpanel (optional)
EXPO_PUBLIC_MIXPANEL_TOKEN=XXXXXXXXXXXXXXXXXXXX

# =============================================
# FEATURE FLAGS
# =============================================
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_LOCATION_SERVICES=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true

# =============================================
# APP STORE LINKS (For sharing/referrals)
# =============================================
EXPO_PUBLIC_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.rez.app
EXPO_PUBLIC_APP_STORE_URL=https://apps.apple.com/app/rez/idXXXXXXXXXX

# =============================================
# SOCIAL LINKS
# =============================================
EXPO_PUBLIC_SUPPORT_EMAIL=support@yourrezapp.com
EXPO_PUBLIC_SUPPORT_PHONE=+1XXXXXXXXXX
EXPO_PUBLIC_WEBSITE_URL=https://yourrezapp.com
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://yourrezapp.com/privacy
EXPO_PUBLIC_TERMS_URL=https://yourrezapp.com/terms

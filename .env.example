# ================================================
# REZ APP FRONTEND ENVIRONMENT CONFIGURATION
# ================================================
# COPY THIS FILE TO .env AND ADD YOUR ACTUAL KEYS

# ================================================
# APPLICATION SETTINGS
# ================================================
EXPO_PUBLIC_APP_NAME=REZ App
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=development

# ================================================
# BACKEND API CONFIGURATION
# ================================================
EXPO_PUBLIC_API_BASE_URL=http://localhost:5001/api
EXPO_PUBLIC_API_TIMEOUT=30000

# ================================================
# AUTHENTICATION SETTINGS
# ================================================
EXPO_PUBLIC_JWT_STORAGE_KEY=rez_app_token
EXPO_PUBLIC_REFRESH_TOKEN_KEY=rez_app_refresh_token
EXPO_PUBLIC_USER_DATA_KEY=rez_app_user
EXPO_PUBLIC_SESSION_TIMEOUT=1440

# ================================================
# EXTERNAL SERVICES - REPLACE WITH YOUR ACTUAL KEYS
# ================================================
# Google Maps API Key - Get from https://console.cloud.google.com/
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE
EXPO_PUBLIC_GOOGLE_PLACES_API_KEY=YOUR_GOOGLE_PLACES_API_KEY_HERE

# OpenCage Geocoding - Get from https://opencagedata.com/api
EXPO_PUBLIC_OPENCAGE_API_KEY=YOUR_OPENCAGE_API_KEY_HERE

# Firebase - Get from https://console.firebase.google.com/
EXPO_PUBLIC_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
EXPO_PUBLIC_FIREBASE_APP_ID=your-app-id

# ================================================
# PAYMENT CONFIGURATION
# ================================================
# Stripe - Get test keys from https://dashboard.stripe.com/test/apikeys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_KEY_HERE

# Razorpay - Get test keys from https://dashboard.razorpay.com/app/website-app-settings/api-keys
EXPO_PUBLIC_RAZORPAY_KEY_ID=rzp_test_YOUR_RAZORPAY_KEY_HERE

# Payment Method Configuration
EXPO_PUBLIC_ENABLE_RAZORPAY=true
EXPO_PUBLIC_ENABLE_STRIPE=true
EXPO_PUBLIC_ENABLE_COD=true
EXPO_PUBLIC_COD_FEE=50
EXPO_PUBLIC_COD_MIN_ORDER=0
EXPO_PUBLIC_COD_MAX_ORDER=50000

# ================================================
# LOCATION SETTINGS
# ================================================
EXPO_PUBLIC_DEFAULT_LATITUDE=28.6139
EXPO_PUBLIC_DEFAULT_LONGITUDE=77.2090
EXPO_PUBLIC_DEFAULT_CITY=Delhi
EXPO_PUBLIC_DEFAULT_COUNTRY=India
EXPO_PUBLIC_MAP_ZOOM_LEVEL=15

# ================================================
# FEATURE FLAGS
# ================================================
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_LOCATION_SERVICES=true
EXPO_PUBLIC_ENABLE_CAMERA_FEATURES=true
EXPO_PUBLIC_ENABLE_VIDEO_UPLOAD=true
EXPO_PUBLIC_ENABLE_SOCIAL_SHARING=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true

# ================================================
# DEVELOPMENT SETTINGS
# ================================================
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_MOCK_API=false
EXPO_PUBLIC_LOG_LEVEL=debug
EXPO_PUBLIC_SHOW_DEV_TOOLS=true

# ================================================
# ANALYTICS & MONITORING
# ================================================
# Google Analytics - Get from https://analytics.google.com/
EXPO_PUBLIC_GA_TRACKING_ID=YOUR_GA_TRACKING_ID

# Sentry - Get from https://sentry.io/
EXPO_PUBLIC_SENTRY_DSN=YOUR_SENTRY_DSN

# Mixpanel - Get from https://mixpanel.com/
EXPO_PUBLIC_MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN

# ================================================
# BUSINESS CONFIGURATION
# ================================================
EXPO_PUBLIC_SUPPORT_EMAIL=support@rezapp.com
EXPO_PUBLIC_SUPPORT_PHONE=+91-1234567890
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://www.rezapp.com/privacy
EXPO_PUBLIC_TERMS_OF_SERVICE_URL=https://www.rezapp.com/terms
EXPO_PUBLIC_HELP_CENTER_URL=https://help.rezapp.com
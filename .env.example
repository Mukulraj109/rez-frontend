# ================================================
# REZ APP FRONTEND ENVIRONMENT CONFIGURATION
# ================================================
# Copy this file to .env and update the values

# ================================================
# APPLICATION SETTINGS
# ================================================
EXPO_PUBLIC_APP_NAME=REZ App
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=development

# ================================================
# BACKEND API CONFIGURATION
# ================================================
EXPO_PUBLIC_API_BASE_URL=http://localhost:5000/api
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_DEV_API_URL=http://localhost:5000/api
EXPO_PUBLIC_PROD_API_URL=https://your-production-api.com/api

# ================================================
# API ENDPOINTS
# ================================================
EXPO_PUBLIC_AUTH_ENDPOINT=/auth
EXPO_PUBLIC_PRODUCTS_ENDPOINT=/products
EXPO_PUBLIC_CART_ENDPOINT=/cart
EXPO_PUBLIC_CATEGORIES_ENDPOINT=/categories
EXPO_PUBLIC_STORES_ENDPOINT=/stores
EXPO_PUBLIC_ORDERS_ENDPOINT=/orders
EXPO_PUBLIC_VIDEOS_ENDPOINT=/videos
EXPO_PUBLIC_PROJECTS_ENDPOINT=/projects
EXPO_PUBLIC_NOTIFICATIONS_ENDPOINT=/notifications
EXPO_PUBLIC_REVIEWS_ENDPOINT=/reviews
EXPO_PUBLIC_WISHLIST_ENDPOINT=/wishlist

# ================================================
# AUTHENTICATION SETTINGS
# ================================================
EXPO_PUBLIC_JWT_STORAGE_KEY=rez_app_token
EXPO_PUBLIC_REFRESH_TOKEN_KEY=rez_app_refresh_token
EXPO_PUBLIC_USER_DATA_KEY=rez_app_user
EXPO_PUBLIC_SESSION_TIMEOUT=1440

# ================================================
# EXTERNAL SERVICES
# ================================================
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
EXPO_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
EXPO_PUBLIC_FIREBASE_APP_ID=your-app-id

# ================================================
# PAYMENT CONFIGURATION
# ================================================
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
EXPO_PUBLIC_RAZORPAY_KEY_ID=your-razorpay-key-id

# ================================================
# SOCIAL MEDIA & SHARING
# ================================================
EXPO_PUBLIC_DEEP_LINK_SCHEME=rezapp
EXPO_PUBLIC_APP_STORE_URL=https://apps.apple.com/app/rez-app/id123456789
EXPO_PUBLIC_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.rezapp
EXPO_PUBLIC_WEBSITE_URL=https://www.rezapp.com

# ================================================
# FEATURE FLAGS
# ================================================
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_LOCATION_SERVICES=true
EXPO_PUBLIC_ENABLE_CAMERA_FEATURES=true
EXPO_PUBLIC_ENABLE_VIDEO_UPLOAD=true
EXPO_PUBLIC_ENABLE_SOCIAL_SHARING=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true

# ================================================
# MEDIA & FILE UPLOAD
# ================================================
EXPO_PUBLIC_MAX_IMAGE_SIZE=5242880
EXPO_PUBLIC_MAX_VIDEO_SIZE=52428800
EXPO_PUBLIC_ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
EXPO_PUBLIC_ALLOWED_VIDEO_TYPES=mp4,mov,avi,webm

# ================================================
# DEVELOPMENT SETTINGS
# ================================================
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_MOCK_API=false
EXPO_PUBLIC_LOG_LEVEL=debug
EXPO_PUBLIC_SHOW_DEV_TOOLS=true

# ================================================
# ANALYTICS & MONITORING
# ================================================
EXPO_PUBLIC_GA_TRACKING_ID=your-ga-tracking-id
EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn
EXPO_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# ================================================
# BUSINESS CONFIGURATION
# ================================================
EXPO_PUBLIC_SUPPORT_EMAIL=support@rezapp.com
EXPO_PUBLIC_SUPPORT_PHONE=+91-1234567890
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://www.rezapp.com/privacy
EXPO_PUBLIC_TERMS_OF_SERVICE_URL=https://www.rezapp.com/terms
EXPO_PUBLIC_HELP_CENTER_URL=https://help.rezapp.com